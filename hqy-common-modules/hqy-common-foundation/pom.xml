<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hqy-common-modules</artifactId>
        <groupId>com.hqy</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <packaging>jar</packaging>
    <modelVersion>4.0.0</modelVersion>

    <description>通用化的基础模块, 比如提供全局的redis操作、 rpc操作、采集服务等</description>

    <artifactId>hqy-common-foundation</artifactId>

    <dependencies>

        <!-- spring data的redis操作 偏向crud-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-redis</artifactId>
        </dependency>

        <!-- Springboot Redisson, Redisson redis客户端 偏向分布式-->
        <dependency>
            <groupId>org.redisson</groupId>
            <artifactId>redisson-spring-boot-starter</artifactId>
        </dependency>

        <!-- thrift-rpc 提供rpc服务 -->
        <dependency>
            <groupId>com.hqy</groupId>
            <artifactId>hqy-thrift-rpc</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.bval</groupId>
                    <artifactId>bval-jsr303</artifactId>
                </exclusion>
            </exclusions>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 采集服务api -->
        <dependency>
            <groupId>com.hqy</groupId>
            <artifactId>hqy-common-collector-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- 公共基础api module -->
        <dependency>
            <groupId>com.hqy</groupId>
            <artifactId>hqy-common-foundation-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

    </dependencies>


</project>