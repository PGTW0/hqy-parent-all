<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.hqy.auth.dao.RoleDao">


    <select id="selectIdByNames" resultType="java.lang.Integer">
        SELECT id
        FROM t_role
        WHERE name IN
        <foreach collection="roles" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </select>

    <select id="queryRolesByNames" resultType="com.hqy.auth.entity.Role">
        SELECT id,`name`, `status`, `level`
        FROM t_role
        WHERE `status` = 1 AND `name` IN
        <foreach collection="roles" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </select>

    <select id="queryRoles" resultType="com.hqy.auth.entity.Role">
        SELECT id, `name`, `status`, `level`, `created`, `updated`
        FROM t_role
        <where>
            <if test="status != null">
                AND `status` = #{status}
            </if>
            <if test="maxRoleLevel != null">
                AND `level` &gt;= #{maxRoleLevel}
            </if>
            <!--<choose>
                <when test="status != null">
                    <if test="maxRoleLevel != null">
                        AND `level` &gt;= #{maxRoleLevel}
                    </if>
                </when>
                <otherwise>
                    <if test="maxRoleLevel != null">
                        `level` &gt;= #{maxRoleLevel}
                    </if>
                </otherwise>
            </choose>-->
        </where>
    </select>

    <select id="queryByIds" resultType="com.hqy.auth.entity.Role">
        SELECT * FROM
        t_role
        WHERE id IN
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>

</mapper>